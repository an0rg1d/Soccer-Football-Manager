{% extends 'base.html.twig' %}

{% block title %}Football Manager for noobs{% endblock %}

{% block body %}
    <main class="flex flex-col lg:flex-row">
        <div class="px-16 pt-12 w-full h-full">
            <h1 class="text-4xl font-bold text-gray-800">Welcome to Football Manager!</h1>
            <p class="text-2xl text-gray-600 mt-4">This is a simple web application to show you information about your favourite game and edit it!.</p>

            <div class="flex justify-center mt-8">
                <div class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full">
                    Start managing your teams
                </div>
            </div>

            <!-- Players Database Table -->
            <div class="mt-12 w-full">
                <h2 class="text-2xl font-bold text-gray-800 mb-6">Player Database</h2>

                {% if players is defined and players|length > 0 %}
                    <div class="overflow-x-auto shadow-lg rounded-lg border border-gray-200">
                        <table class="min-w-full bg-white">
                            <thead class="bg-gradient-to-r from-blue-600 to-blue-700 text-white">
                            <tr>
                                <th class="px-6 py-4 text-left text-sm font-semibold uppercase tracking-wider">Name</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold uppercase tracking-wider">Position</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold uppercase tracking-wider">Club</th>
                                <th class="px-6 py-4 text-left text-sm font-semibold uppercase tracking-wider">Country</th>
                                <th class="px-6 py-4 text-center text-sm font-semibold uppercase tracking-wider">Goals</th>
                                <th class="px-6 py-4 text-center text-sm font-semibold uppercase tracking-wider">Assists</th>
                                <th class="px-6 py-4 text-center text-sm font-semibold uppercase tracking-wider">Yellow Cards</th>
                                <th class="px-6 py-4 text-center text-sm font-semibold uppercase tracking-wider">Red Cards</th>
                                <th class="px-6 py-4 text-center text-sm font-demibold uppercase tracking-wider">Market Value</th>
                            </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                            {% for player in players %}
                                <tr class="hover:bg-gray-50 transition-colors duration-200 {% if loop.index is odd %}bg-white{% else %}bg-gray-50{% endif %}">
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="flex-shrink-0 h-10 w-10">
                                                <div class="h-10 w-10 rounded-full bg-gradient-to-r from-blue-400 to-blue-600 flex items-center justify-center text-white font-bold text-sm">
                                                    {{ player.name|slice(0, 1) }}
                                                </div>
                                            </div>
                                            <div class="ml-4">
                                                <div class="text-sm font-medium text-gray-900">{{ player.name }}</div>
                                                <div class="text-xs text-gray-500">#{{ player.id }}</div>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="inline-flex px-3 py-1 text-xs font-semibold rounded-full
                                                {% if 'Goalkeeper' in player.position or 'GK' in player.position %}bg-yellow-100 text-yellow-800
                                                {% elseif 'Defender' in player.position or 'Back' in player.position %}bg-blue-100 text-blue-800
                                                {% elseif 'Midfielder' in player.position or 'Midfield' in player.position %}bg-green-100 text-green-800
                                                {% elseif 'Forward' in player.position or 'Attacking' in player.position or 'Winger' in player.position %}bg-red-100 text-red-800
                                                {% else %}bg-gray-100 text-gray-800{% endif %}">
                                                {{ player.position }}
                                            </span>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <div class="text-sm font-medium text-gray-900">{{ player.club }}</div>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <div class="flex items-center">
                                            <span class="text-sm text-gray-900">{{ player.country }}</span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <div class="flex items-center justify-center">
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                                    {% if player.goals >= 100 %}bg-green-100 text-green-800
                                                    {% elseif player.goals >= 50 %}bg-blue-100 text-blue-800
                                                    {% elseif player.goals >= 20 %}bg-yellow-100 text-yellow-800
                                                    {% else %}bg-gray-100 text-gray-800{% endif %}">
                                                    ‚öΩ {{ player.goals }}
                                                </span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <div class="flex items-center justify-center">
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                                                    {% if player.assists >= 100 %}bg-purple-100 text-purple-800
                                                    {% elseif player.assists >= 50 %}bg-indigo-100 text-indigo-800
                                                    {% elseif player.assists >= 20 %}bg-blue-100 text-blue-800
                                                    {% else %}bg-gray-100 text-gray-800{% endif %}">
                                                    üéØ {{ player.assists }}
                                                </span>
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <div class="flex items-center justify-center">
                                            {% if player.yellowCards > 0 %}
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                                                        üü® {{ player.yellowCards }}
                                                    </span>
                                            {% else %}
                                                <span class="text-gray-400">-</span>
                                            {% endif %}
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <div class="flex items-center justify-center">
                                            {% if player.redCards > 0 %}
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                                                        üü• {{ player.redCards }}
                                                    </span>
                                            {% else %}
                                                <span class="text-gray-400">-</span>
                                            {% endif %}
                                        </div>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-center">
                                        <div class="flex items-center justify-center">
                                            <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium
                                                  {% if player.marketvalue >= 100000000 %}bg-gradient-to-r from-yellow-400 to-yellow-600 text-white
                                                  {% elseif player.marketvalue >= 50000000 %}bg-gradient-to-r from-green-400 to green-600 text-white
                                                  {% elseif player.marketvalue >= 2000000 %}bg-gradient-to-r from-blue-400 to blue-600
                                                  {% else %}bg-gray-100 text-gray-800{% endif %}">
                                                  üí∞ ‚Ç¨{{ (player.marketvalue / 1000000)|number_format(0) }}M
                                            </span>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <!-- Table Footer with Stats -->
                    <div class="mt-4 bg-gray-50 px-6 py-3 rounded-lg border border-gray-200">
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm text-gray-600">
                            <div class="text-center">
                                <div class="font-semibold text-gray-900">{{ players|length }}</div>
                                <div class="text-xs">Total Players</div>
                            </div>
                            <div class="text-center">
                                <div class="font-semibold text-gray-900">
                                    {% set totalGoals = 0 %}
                                    {% for player in players %}
                                        {% set totalGoals = totalGoals + player.goals %}
                                    {% endfor %}
                                    {{ totalGoals }}
                                </div>
                                <div class="text-xs">Total Goals</div>
                            </div>
                            <div class="text-center">
                                <div class="font-semibold text-gray-900">
                                    {% set totalAssists = 0 %}
                                    {% for player in players %}
                                        {% set totalAssists = totalAssists + player.assists %}
                                    {% endfor %}
                                    {{ totalAssists }}
                                </div>
                                <div class="text-xs">Total Assists</div>
                            </div>
                            <div class="text-center">
                                <div class="font-semibold text-gray-900">
                                    {% set totalCards = 0 %}
                                    {% for player in players %}
                                        {% set totalCards = totalCards + player.yellowCards + player.redCards %}
                                    {% endfor %}
                                    {{ totalCards }}
                                </div>
                                <div class="text-xs">Total Cards</div>
                            </div>
                        </div>
                    </div>

                    <!-- Top Performers Section -->
                    <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
                        <!-- Top Scorer -->
                        <div class="bg-white p-6 rounded-lg shadow border border-gray-200">
                            <h3 class="text-lg font-semibold text-gray-900 mb-3">üèÜ Top Scorer</h3>
                            {% set topScorer = players|sort((a, b) => b.goals <=> a.goals)|first %}
                            {% if topScorer %}
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-12 w-12 bg-gradient-to-r from-green-400 to-green-600 rounded-full flex items-center justify-center text-white font-bold">
                                        {{ topScorer.name|slice(0, 1) }}
                                    </div>
                                    <div class="ml-3">
                                        <div class="text-sm font-medium text-gray-900">{{ topScorer.name }}</div>
                                        <div class="text-sm text-gray-500">{{ topScorer.goals }} goals</div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>

                        <!-- Top Assist Provider -->
                        <div class="bg-white p-6 rounded-lg shadow border border-gray-200">
                            <h3 class="text-lg font-semibold text-gray-900 mb-3">üéØ Top Assists</h3>
                            {% set topAssister = players|sort((a, b) => b.assists <=> a.assists)|first %}
                            {% if topAssister %}
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-12 w-12 bg-gradient-to-r from-purple-400 to-purple-600 rounded-full flex items-center justify-center text-white font-bold">
                                        {{ topAssister.name|slice(0, 1) }}
                                    </div>
                                    <div class="ml-3">
                                        <div class="text-sm font-medium text-gray-900">{{ topAssister.name }}</div>
                                        <div class="text-sm text-gray-500">{{ topAssister.assists }} assists</div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>

                        <!-- Most Valuable Player -->
                        <div class="bg-white p-6 rounded-lg shadow border border-gray-200">
                            <h3 class="text-lg font-semibold text-gray-900 mb-3">Most Valuable Player</h3>
                            {% set mostValuable = players|sort((a, b) => b.marketvalue <=> a.marketvalue)|first %}
                            {% if mostValuable %}
                                <div class="flex items-center">
                                    <div class="felx-shrink-0 h-12 w-12 bg-gradient-to-r from-yellow-400 to-yello-600 rounded-full flex items-center jutify-center text-white front-bold">
                                        {{ mostValuable.name|slice(0, 1) }}
                                    </div>
                                    <div class="ml-3">
                                        <div class="text-sm font-medium text-gray-900">{{ mostValuable.name }}</div>
                                        <div class="text-sm text-gray-500">‚Ç¨{{ (mostValuable.marketvalue / 1000000) |number_format(0) }}M</div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>

                        <!-- Most Disciplined -->
                        <div class="bg-white p-6 rounded-lg shadow border border-gray-200">
                            <h3 class="text-lg font-semibold text-gray-900 mb-3">üòá Most Disciplined</h3>
                            {% set mostDisciplined = players|sort((a, b) => (a.yellowCards + a.redCards) <=> (b.yellowCards + b.redCards))|first %}
                            {% if mostDisciplined %}
                                <div class="flex items-center">
                                    <div class="flex-shrink-0 h-12 w-12 bg-gradient-to-r from-blue-400 to-blue-600 rounded-full flex items-center justify-center text-white font-bold">
                                        {{ mostDisciplined.name|slice(0, 1) }}
                                    </div>
                                    <div class="ml-3">
                                        <div class="text-sm font-medium text-gray-900">{{ mostDisciplined.name }}</div>
                                        <div class="text-sm text-gray-500">{{ mostDisciplined.yellowCards + mostDisciplined.redCards }} cards</div>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                {% else %}
                    <div class="bg-gray-50 border-2 border-dashed border-gray-300 rounded-lg p-12 text-center">
                        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                        <h3 class="mt-4 text-lg font-medium text-gray-900">No players found</h3>
                        <p class="mt-2 text-gray-500">Get started by adding some players to your database.</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </main>
{% endblock %}


